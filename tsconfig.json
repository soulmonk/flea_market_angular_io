{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "paths": {
      "@env": ["src/environments/environment.ts"]
      "@app/*": ["src/app/*"],
    },
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "lib": [
      "es2020",
      "dom",
      "esnext.asynciterable"
    ]
  }
}
